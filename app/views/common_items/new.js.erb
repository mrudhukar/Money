<% if params[:type_change] %>
  $('#transaction_type').html("<%= escape_javascript(render :partial => "transaction_types_#{@type}")%>")
  <% if @type == "0" %>
    $('#common_item_cost').attr('disabled', false);
  <% else %>
    $('#common_item_cost').attr('disabled', true);
  <% end %>
  $('#loading_image').hide()
<% else %>
  $('#modal_popup_container').html("<%= escape_javascript(render :partial => "new")%>")
  openPopup("#new_common_item_modal");
  CommonItem.observeChange();
<% end %>