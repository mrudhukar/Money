<% @title = "Edit Profile" %>
<% @page_action = {:name => "View profile", :url => user_path(current_user)} %>

<%= form_for @user, :validate => true do |f| %>
  <fieldset>
    <%= f.text_field :name %>
    <%= f.text_field :nick_name %>
    <%= f.text_field :email %>
    <%= f.password_field :password, :validate => false %>
    <%= f.password_field :password_confirmation, :validate => false %>
    <%= f.select :notification_setting, notification_options(@user), {}, :title => "Email Notification" %>
  <%= f.actions do %>
    <%= f.submit "Save" %>
  <% end %>
  </fieldset>
<% end %>