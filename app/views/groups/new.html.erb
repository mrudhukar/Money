<% @title = "Create a new group" %>

<div id="new_group">
  <% form_for @group do |f| %>
    <%= f.error_messages %>
    <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </p>

    <p>
      <%= f.submit "Submit", :class => "button" %> or <%= link_to "Cancel", groups_path %>
    </p>
  <% end %>
</div>