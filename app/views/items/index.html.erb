<% @title = "My Items" %>
<span style="float:left;">
  <%= page_entries_info(@items,  :entry_name => 'items') %>
</span>
<span style="float:right;"><%= will_paginate @items %></span>
<table id="items_list" rules="all">
  <tr>
    <td><b>Item Name</b></td>
    <td><b>My Share</b></td>
    <td><b>Item Cost</b></td>
    <td><b>Group</b></td>
    <td><b>Date</b></td>
  </tr>
  <% @items.each do |item| %>
    <tr>
      <td><%= item.name %></td>
      <td>Rs.<%= item.default_amount%></td>
      <td>Rs.<%= item.common_item.cost %></td>
      <td><%= item.common_item.group.name %></td>
      <td><%= item.created_at.strftime('%B, %d %Y')%></td>
    </tr>
  <% end %>
  <tr>
    <td><b>Total amount</b></td>
    <td style="color:red;">Rs. <%= display_my_total %></td>
    <td></td><td></td>
    <td><%= Time.now.strftime('%B, %d %Y')%></td>
  </tr>
</table>
<span style="float:right;"><%= will_paginate @items %></span>

<h3>Net Credit: Rs. <%= current_user.net_balance%>/-</h3>